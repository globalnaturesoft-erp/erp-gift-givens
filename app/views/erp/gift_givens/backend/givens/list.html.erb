<table class="table table-advance table-hover table-striped table-checkable order-column" id="">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("code") %>
                <th class="sortable" sort-by='erp_gift_givens_givens.code'>
                    <%= t('.code') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("given_date") %>
                <th class="sortable" sort-by='erp_gift_givens_givens.given_date'>
                    <%= t('.given_date') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("contact") %>
                <th class="sortable" sort-by='erp_contacts_contacts.name'>
                    <%= t('.contact') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("quantity") %>
                <th class="text-center sortable" sort-by='erp_gift_givens_givens.cache_products_count'>
                    <%= t('.quantity') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("note") %>
                <th class="text-center">
                    <%= t('.note') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th>
                    <%= t('.status') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th class="text-center">
                    <%= t('.creator') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("approver") %>
                <th class="text-center">
                    <%= t('.approver') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_gift_givens_givens.created_at'>
                    <%= t('.created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('.actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @givens.each do |given| %>
            <tr class="odd gradeX has-child-table" data-url="<%= erp_gift_givens.given_details_backend_givens_path(id: given.id) %>">
                <td>
                    <%= erp_datalist_check_row(id: given.id) %>
                </td>
                <% if get_columns(params).include?("code") %>
                <td>
                    <i class="fa fa-plus expand tr-expand-button"></i>
                    <strong><%= link_to given.code, erp_gift_givens.edit_backend_given_path(given) %></strong>
                </td>
                <% end %>
                <% if get_columns(params).include?("given_date") %>
                <td><%= given.given_date.strftime("%d/%m/%Y") %></td>
                <% end %>
                <% if get_columns(params).include?("contact") %>
                <td><%= given.contact_name %></td>
                <% end %>
                <% if get_columns(params).include?("quantity") %>
                <td class="text-center"><%= given.cache_products_count.to_i %></td>
                <% end %>
                <% if get_columns(params).include?("note") %>
                <td><%= given.note %></td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                <td>
                    <% if given.status == Erp::GiftGivens::Given::STATUS_DRAFT %>
                        <span class="label label-sm label-default"><%= t('.draft') %></span>
                    <% elsif given.status == Erp::GiftGivens::Given::STATUS_ACTIVE %>
                        <span class="label label-sm label-success"><%= t('.active') %></span>
                    <% elsif given.status == Erp::GiftGivens::Given::STATUS_DELIVERED %>
                        <span class="label label-sm label-finished"><%= t('.delivered') %></span>
                    <% elsif given.status == Erp::GiftGivens::Given::STATUS_DELETED %>
                        <span class="label label-sm label-danger"><%= t('.deleted') %></span>
                    <% end %>
                </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                <td>
                    <%= erp_component('avatar', {
                        user: given.creator
                    }) %>
                </td>
                <% end %>
                <% if get_columns(params).include?("approver") %>
                <td>
                    <%= erp_component('avatar', {
                        user: given.creator
                    }) %>
                </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                <td><%= given.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td>
                    <%= erp_datalist_row_actions(
                            [
                                {
                                    text: '<i class="fa fa-edit"></i> '+t('.edit'),
                                    href: erp_gift_givens.edit_backend_given_path(given),
                                    hide: (given.delivered? or given.deleted?)
                                },
                                {
                                    text: '<i class="fa fa-check-square-o"></i> '+t('.activate'),
                                    url: erp_gift_givens.set_activate_backend_givens_path(id: given),
                                    data_method: 'PUT',
                                    hide: !given.draft?,
                                    class: 'ajax-link'
                                },
                                {
                                    text: '<i class="fa fa-level-up"></i> '+t('.delivery'),
                                    url: erp_gift_givens.set_delivered_backend_givens_path(id: given),
                                    data_method: 'PUT',
                                    hide: !given.active?,
                                    class: 'ajax-link'
                                },
                                {
                                    divider: true
                                },
                                {
                                    text: '<i class="fa fa-trash"></i> '+t('.delete'),
                                    url: erp_gift_givens.set_deleted_backend_givens_path(id: given),
                                    data_method: 'PUT',
                                    hide: given.deleted?,
                                    class: 'ajax-link'
                                }
                            ]
                        ) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% if @givens.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>
    
<%= erp_datalist_pagination(@givens) %>